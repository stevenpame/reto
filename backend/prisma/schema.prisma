// Define el proveedor de tu base de datos (ej. postgresql, mysql, sqlite)
datasource db {
  provider = "mysql" 
  url  = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 1. Modelo Usuarios (para autenticaci칩n)
model Usuario {
  id              String    @id @default(uuid())
  email           String    @unique
  passwordHash    String    // Almacena el hash seguro de la contrase침a
  nombre          String?
  fechaRegistro   DateTime  @default(now())
  reservas        Reserva[]
}

// 2. Modelo Equipos (el cat치logo de lo que se puede reservar)
model Equipo {
  id              String    @id @default(uuid())
  nombreEquipo    String
  numInventario   String    @unique
  especificaciones String?
  estado          String    @default("operativo")
  reservas        Reserva[]
}

// 3. Modelo Reservas (la clave de la l칩gica de negocio)
model Reserva {
  id                  String    @id @default(uuid())
  usuarioId           String
  equipoId            String
  fechaInicioReserva  DateTime  // Usamos DateTime para manejar fechas y horas
  fechaFinReserva     DateTime
  estadoReserva       String    @default("activa") // 'activa', 'cancelada', 'finalizada'

  // Relaciones
  usuario             Usuario   @relation(fields: [usuarioId], references: [id])
  equipo              Equipo    @relation(fields: [equipoId], references: [id])


}